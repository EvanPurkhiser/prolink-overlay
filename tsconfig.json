{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["dom", "ES2020"],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./*"],
      "app/*": ["./renderer/*"],
      "overlay/*": ["./overlay/*"],
      "main/*": ["./main/*"],
      "web/*": ["./website/*"]
    }
  },
  "plugins": [
    {
      "name": "typescript-styled-plugin"
    }
  ],
  "include": ["./src"]
}
