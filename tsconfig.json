{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "ES2019"],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "app/*": ["src/renderer/*"],
      "main/*": ["src/main/*"]
    }
  },
  "include": ["./src"]
}
